@{
    ViewBag.Title = "Загрузка учебных планов";
}

<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse"></button>
        <a class="navbar-brand filter" href="@Url.Action("Index", "Home")"></a>
    </div>
    <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
            <li>
                <a href="@Url.Action("Index", "Home")">
                    <i class="fa fa-arrow-circle-left fa-32px"></i><br>
                    <span class="nav-icon-text">К расписанию</span>
                </a>
            </li>
        </ul>
        @if (Request.IsAuthenticated)
        {
            using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new {id = "logoutForm", @class = "navbar-right"}))
            {
                @Html.AntiForgeryToken()

                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="fa fa-user fa-32px"></i><br>
                            <span class="nav-icon-text"></span>Здравствуйте, @(ViewBag.UserName + "!") <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="javascript:document.getElementById('logoutForm').submit()"><span class="fa fa-power-off"></span> Выйти</a></li>
                        </ul>
                    </li>
                </ul>
            }
        }
    </div>
</div>

<div class="schedule-container">
    <div class="container">
        <h2>Загрузка учебных планов</h2>
        <hr />

        <div class="row mrgbtm36">
            <div class="col-md-6">
                <input id="fileupload" type="file" name="files[]" style="display: none" multiple>
                <button id="fileuploadBtn" type="button" class="btn btn-success btn-lg">Выбрать файлы</button>
            </div>
        </div>     

        <div id="files"></div>
    </div>
</div>

@section Scripts
{
    @Scripts.Render("~/bundles/upload")

    <script>
        $(document).ready(function () {
            /* Подгружаем формы образования
            ----------------------------------------------*/
            var educationForms = [];
            $.post('/Dictionary/EducationForm', {}, function (result) {
                if (result) {
                    educationForms = result;
                }
            });

            /* Подгружаем уровни образования
            ----------------------------------------------*/
            var educationLevels = [];
            $.post('/Dictionary/EducationLevel', {}, function (result) {
                if (result) {
                    educationLevels = result;
                }
            });

            /* Подгружаем года начала обучения
            ----------------------------------------------*/
            var yearsStart = [];
            $.post('/Dictionary/AcademicPlanYear', {}, function (result) {
                if (result) {
                    yearsStart = result;
                }
            });

            /* Подгружаем направления
            ----------------------------------------------*/
            var directions = [];
            $.post('/Dictionary/Direction', {}, function (result) {
                if (result) {
                    directions = result;
                }
            });

            /* Настройка плагина загрузки файлов
            ----------------------------------------------*/
            $("#fileuploadBtn").click(function() {
                $("#fileupload").trigger('click');
            });

            $('#fileupload').fileupload({
                dataType: 'json',
                url: '/AcademicPlan/Upload',
                autoUpload: true,
                add: function(e, data) {
                    var filename = data.files[0].name;
                    var size = Math.round(data.files[0].size / 1024);
                    data.context = $(
                            "<div class='row file-container'>\
                                <div class='col-md-12'>\
                                    <a class='remove link-btn pull-right text-danger'><i class='fa fa-times'></i></a>\
                                </div>\
                                <div class='col-md-9 file-info'> \
                                    <div class='col-md-12'>\
                                        <span class='filename'>" + filename + "</span>\
                                        <span class='filesize'>(" + size + "KB)</span>\
                                    </div>\
                                    <div class='col-md-12'>\
                                        <div class='progress file-progress'>\
                                            <div class='progress-bar' role='progressbar' aria-valuenow='0' aria-valuemin='0' aria-valuemax='100' style='width: 0;'>\
                                                <span class='sr-only'>0% complete</span>\
                                            </div>\
                                        </div>\
                                    </div>\
                                    <div class='col-md-12'>\
                                        <div class='col-md-4'>\
                                            <label>Форма обучения</label>\
                                            <select class='form form-control'></select>\
                                        </div>\
                                        <div class='col-md-4 levelBlock' style='display:none'>\
                                            <label>Уровень образования</label>\
                                            <select class='level form-control'></select>\
                                        </div>\
                                        <div class='col-md-4 yearBlock' style='display:none'>\
                                            <label>Год начала обучения</label>\
                                            <select class='year form-control'></select>\
                                        </div>\
                                    </div>\
                                    <div class='col-md-12 mrgbtm12 mrgtop12'>\
                                        <div class='col-md-6 directionBlock' style='display:none'>\
                                            <label>Направление</label>\
                                            <select class='direction form-control'></select>\
                                        </div>\
                                        <div class='col-md-6 profileBlock' style='display:none'>\
                                            <label>Профиль</label>\
                                            <select class='profile form-control'></select>\
                                        </div>\
                                    </div>\
                                </div>\
                                <div class='col-md-3 file-info'>\
                                    <div class='file-actions'>\
                                        <a class='upload link-btn'><i class='fa fa-upload'></i> Загрузить</a>\
                                    </div>\
                                </div>\
                             </div>")
                        .appendTo("#files")
                        .find(".upload")
                        .click(function() {
                            data.context = $('<p/>').text('Загрузка...').replaceAll($(this));
                            data.submit();
                        });

                    // Кнопка удаления
                    data.context
                        .closest(".file-container")
                        .find(".remove")
                        .click(function() {
                            data.context.closest(".file-container").remove();
                        });

                    // Заполняем выпадающий список форм образования
                    var fileContainer = data.context.closest(".file-container");
                    var formSelect = fileContainer.find(".form");
                    formSelect.html('');
                    formSelect.append("<option></option>");
                    $.each(educationForms, function(index, form) {
                        var option = "<option value='" + form.EducationFormId + "'>" + form.EducationFormName + "</option>";
                        formSelect.append(option);
                    });                   

                    // Заполняем выпадающий список уровней образования
                    var levelSelect = fileContainer.find(".level");
                    levelSelect.html('');
                    levelSelect.append("<option></option>");
                    $.each(educationLevels, function (index, level) {
                        var option = "<option value='" + level.EducationLevelId + "'>" + level.EducationLevelName + "</option>";
                        levelSelect.append(option);
                    });

                    // Заполняем выпадающий список года начала обучения
                    var yearSelect = fileContainer.find(".year");
                    yearSelect.html('');
                    yearSelect.append("<option></option>");
                    $.each(yearsStart, function (index, yearStart) {
                        var option = "<option value='" + yearStart.Value + "'>" + yearStart.Value + "</option>";
                        yearSelect.append(option);
                    });

                    // Заполняем выпадающий список года начала обучения
                    var directionSelect = fileContainer.find(".direction");
                    directionSelect.html('');
                    directionSelect.append("<option></option>");
                    $.each(directions, function (index, direction) {
                        var option = "<option value='" + direction.EducationDirectionId + "'>" + direction.EducationDirectionName + "</option>";
                        directionSelect.append(option);
                    });

                    // Показ/скрытие выпадающих списков
                    var levelBlock = fileContainer.find(".levelBlock");
                    formSelect.change(function () {
                        var formId = $(this).val();
                        if (formId) {
                            levelBlock.show();
                        } else {
                            levelBlock.hide();
                        }
                    });

                    var yearBlock = fileContainer.find(".yearBlock");
                    levelSelect.change(function () {
                        var levelId = $(this).val();
                        if (levelId) {
                            yearBlock.show();
                        } else {
                            yearBlock.hide();
                        }
                    });

                    var directionBlock = fileContainer.find(".directionBlock");
                    yearSelect.change(function () {
                        var year = $(this).val();
                        if (year) {
                            directionBlock.show();
                        } else {
                            directionBlock.hide();
                        }
                    });

                    var profileBlock = fileContainer.find(".profileBlock");
                    directionSelect.change(function () {
                        var directionId = $(this).val();
                        if (directionId) {
                            profileBlock.show();
                        } else {
                            profileBlock.hide();
                        }
                    });
                },
                done: function(e, data) {
                    data.context.html("<span class='bigger'><i class='fa fa-check bigger text-success'></i> Загрузка завершена</span>");
                },
                progress: function(e, data) {
                    var progress = parseInt(data.loaded / data.total * 100, 10);
                    var parent = data.context.closest(".file-container");
                    parent.find(".file-progress .progress-bar").css('width', progress + '%');
                }
            });

            $('#fileupload').bind('fileuploadsubmit', function(e, data) {
                var fileContainer = data.context.closest(".file-container");
                var formId = fileContainer.find(".form").val();
                var levelId = fileContainer.find(".level").val();
                var yearStart = fileContainer.find(".year").val();

                // The example input, doesn't have to be part of the upload form:
                // var input = $('#input');
                data.formData = { formId: formId, levelId: levelId, yearStart: yearStart };
                //if (!data.formData.example) {
                //    data.context.find('button').prop('disabled', false);
                //    input.focus();
                //    return false;
                //}
            });
        });
    </script>
}