@{
    ViewBag.Title = "Загрузка учебных планов";
}

<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse"></button>
        <a class="navbar-brand filter" href="@Url.Action("Index", "Home")"></a>
    </div>
    <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
            <li>
                <a href="@Url.Action("Index", "Home")">
                    <i class="fa fa-arrow-circle-left fa-32px"></i><br>
                    <span class="nav-icon-text">К расписанию</span>
                </a>
            </li>
        </ul>
        @if (Request.IsAuthenticated)
        {
            using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new {id = "logoutForm", @class = "navbar-right"}))
            {
                @Html.AntiForgeryToken()

                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="fa fa-user fa-32px"></i><br>
                            <span class="nav-icon-text"></span>Здравствуйте, @(ViewBag.UserName + "!") <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="javascript:document.getElementById('logoutForm').submit()"><span class="fa fa-power-off"></span> Выйти</a></li>
                        </ul>
                    </li>
                </ul>
            }
        }
    </div>
</div>

<div class="schedule-container">
    <div class="container">
        <h2>Загрузка учебных планов</h2>
        <hr />

        <div class="row mrgbtm36">
            <div class="col-md-6">
                <input id="fileupload" type="file" name="files[]" style="display: none" multiple>
                <button id="fileuploadBtn" type="button" class="btn btn-success btn-lg">Выбрать файлы</button>
            </div>
        </div>     

        <div id="files"></div>
    </div>
</div>

@section Scripts
{
    @Scripts.Render("~/bundles/upload")
    
    <script>
        $(document).ready(function () {
            $("#fileuploadBtn").click(function() {
                $("#fileupload").trigger('click');
            });

            $('#fileupload').fileupload({
                dataType: 'json',
                url: '/AcademicPlan/Upload',
                autoUpload: true,
                add: function (e, data) {
                    var filename = data.files[0].name;
                    var size = Math.round(data.files[0].size / 1024);
                    data.context = $(
                            "<div class='row file-container'>\
                                <div class='col-md-12'>\
                                    <a class='remove link-btn pull-right text-danger'><i class='fa fa-times'></i></a>\
                                </div>\
                                <div class='col-md-9 file-info'> \
                                    <div class='col-md-12'>\
                                        <span class='filename'>" + filename + "</span>\
                                        <span class='filesize'>(" + size + "KB)</span>\
                                    </div>\
                                    <div class='col-md-6'>\
                                        <div class='progress file-progress'>\
                                            <div class='progress-bar' role='progressbar' aria-valuenow='0' aria-valuemin='0' aria-valuemax='100' style='width: 0;'>\
                                                <span class='sr-only'>0% complete</span>\
                                            </div>\
                                        </div>\
                                    </div>\
                                </div>\
                                <div class='col-md-3 file-info'>\
                                    <div class='file-actions'>\
                                        <a class='upload link-btn'><i class='fa fa-upload'></i> Загрузить</a>\
                                    </div>\
                                </div>\
                             </div>")
                        .appendTo("#files")
                        .find(".upload")
                        .click(function() {
                            data.context = $('<p/>').text('Загрузка...').replaceAll($(this));
                            data.submit();
                        });

                    data.context
                        .closest(".file-container")
                        .find(".remove")
                        .click(function () {
                            data.context.closest(".file-container").remove();
                        });                  
                },
                done: function(e, data) {
                    // data.context.text('Загрузка завершена.');
                    data.context.html("<span class='bigger'><i class='fa fa-check bigger text-success'></i> Загрузка завершена</span>");
                },
                progress: function (e, data) {
                    var progress = parseInt(data.loaded / data.total * 100, 10);
                    var parent = data.context.closest(".file-container");
                    parent.find(".file-progress .progress-bar").css('width', progress + '%');
                }
            });           
        });
    </script>
}